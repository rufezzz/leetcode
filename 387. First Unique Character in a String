#include <iostream>
#include <vector>
#include <map>
#include <set>
#include <algorithm>
#include <unordered_map>
#include <fstream>


class Solution {
public:
    int firstUniqChar(std::string s)
    {
        std::map<char, int> m;
        for(int i = 0; i< s.size(); i++)
        {
            m[s[i]]++;          
        }
        
        for(int i =0; i<s.size(); i++)
        {
           auto it = m.find(s[i]);
           if(it->second == 1)
           {
               return i;
           }             
        }   
        return -1;
    }
};

int main()
{
   std::string s = "leetcode";

    Solution *solution = new Solution();
    solution->firstUniqChar(s);

    delete solution;

    return 0;
}
